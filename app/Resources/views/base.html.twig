<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!--Import Google Icon Font-->
            <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <!-- Compiled and minified CSS -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/ecocolocs/style/main.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    {% block header %}
    <body>
        <nav>
            <div class="row nav-wrapper">
                <div class="offset-s1 col s3">
                    <a href="{{ path('ecocolocs_homepage') }}">Accueil</a>
                </div>
                <div class="col s3">
                    <a href="{{ path('ecocolocs_manifeste') }}">Le mouvement</a>
                </div>
                <div class="col s3">
                    <a href="{{ path('colocation_index') }}">Les colocs</a>
                </div>
                <div class="col s2">
                    <a href="{{ path('ecocolocs_contact') }}">Contact</a>
                </div>
            </div>
        </nav>
        {% endblock header %}
        {% block body %}

        {% endblock %}
        {% block footer %}
        <footer class="page-footer">
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        <div class="center">
                            <a href="{{ path('ecocolocs_contact') }}">Contactez-nous</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    {% endblock footer %}
        {% block javascripts %}
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
        {% endblock %}
    </body>
</html>
